pipeline {
    agent any

    stages {
        stage('Checkout GIT') {
            steps {
                echo 'Pulling'
               git branch: 'main', credentialsId: 'Cred', url: 'https://github.com/ibtchy/ProjetDevOps.git'
                
            }
        }
      stage('Maven Version'){
            steps {
                sh 'mvn -version'
            }
        }
        
        
          stage('Code Quality Check via SonarQube') {
             
          
            steps {
               
script {

sh '  mvn sonar:sonar -Dsonar.sources=src/main/java -Dsonar.css.node=. -Dsonar.java.binaries=. -Dsonar.host.url=http://http://172.20.10.9:9000/ -Dsonar.login=admin   -Dsonar.password=sonar'

 
}
               
            }
        }
      
         
       
           
        
        
        
        
    }
}
